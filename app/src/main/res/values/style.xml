<resources>
    <!-- Base application theme. -->
    <style name="TextTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <declare-styleable name="PasswordEditText">
        <attr name="useStrike" format="boolean"/>
    </declare-styleable>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:drawableRight">@drawable/spinner_dropdown</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="Btn_Style_Confirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_btn_confirm</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>