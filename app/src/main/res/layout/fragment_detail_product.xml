<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DetailProductFragment"
    android:background="@color/white">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutDetailProduct"
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/img_detail_product"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="50dp"
                        android:layout_alignParentBottom="true">
                    </ImageView>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:tint="@color/white"
                            android:id="@+id/img_menu_detail_product"
                            android:layout_alignParentRight="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_more_horiz_24"
                            android:background="@drawable/bg_oval"
                            android:padding="2dp"
                            android:alpha="0.6">
                        </ImageView>
                        <ImageView
                            app:tint="@color/white"
                            android:id="@+id/img_shopping_cart_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_shopping_cart_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_menu_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_home_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_home_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_shopping_cart_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_search_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_search_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_home_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_back_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            android:background="@drawable/bg_oval"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:alpha="0.6"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_name_detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"/>
                <LinearLayout
                    android:id="@+id/ln_rating_detail_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name_detail_product"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/rating_detail_product"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:rating="4"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:progressTint="#fff0"/>
                    <TextView
                        android:id="@+id/txt_number_rating_detail_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(17 đáng giá)"
                        android:textSize="20sp"
                        android:textColor="#323232"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_price_detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.000.000 đ"
                    android:textSize="30sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_below="@+id/ln_rating_detail_product" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>