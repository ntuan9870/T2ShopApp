<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_root">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_tb_home">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="#701FFD">
                <RelativeLayout
                    android:layout_margin="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_collapseMode="parallax">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T2SHOP"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white">
                    </TextView>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                                app:tint="@color/white"
                                android:id="@+id/img_shopping_cart"
                                android:layout_alignParentRight="true"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_shopping_cart_24">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:layout_toLeftOf="@+id/img_shopping_cart"
                            android:layout_marginRight="20dp"
                            android:id="@+id/img_message"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_message_24">
                        </ImageView>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:id="@+id/ln_search"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_search"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:focusableInTouchMode="true">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_search_24"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">
                    </ImageView>
                    <EditText
                        android:id="@+id/edt_search"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Bạn muốn tìm gì?"
                        android:focusable="false"/>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/bg_home"  />
                    <RelativeLayout
                        android:id="@+id/rl_banner"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ProgressBar
                            android:id="@+id/progress_bar_banner"
                            android:layout_centerInParent="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            style="?android:attr/progressBarStyle"
                            android:indeterminateTint="#0002A5"/>
                        <androidx.viewpager.widget.ViewPager
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:id="@+id/myViewPagerBanner" />
                        <me.relex.circleindicator.CircleIndicator
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/indicator_banner"
                            android:paddingBottom="5dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_new_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rl_banner"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="#FF5722"
                                android:text="Sản phẩm mới"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#002F6A"
                                android:text="xem thêm>>"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_new_product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rl_featured_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ll_new_product"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="#FF5722"
                                android:text="Sản phẩm nổi bật"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#002F6A"
                                android:text="xem thêm>>"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_featured_product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
