<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DetailProductFragment"
    android:background="@color/white">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:paddingBottom="70dp">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutDetailProduct"
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/img_detail_product"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="50dp"
                        android:layout_alignParentBottom="true">
                    </ImageView>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:tint="@color/white"
                            android:id="@+id/img_menu_detail_product"
                            android:layout_alignParentRight="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_more_horiz_24"
                            android:background="@drawable/bg_oval"
                            android:padding="2dp"
                            android:alpha="0.6">
                        </ImageView>
                        <ImageView
                            app:tint="@color/white"
                            android:id="@+id/img_shopping_cart_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_shopping_cart_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_menu_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_home_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_home_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_shopping_cart_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_search_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_search_24"
                            android:background="@drawable/bg_oval"
                            android:padding="4dp"
                            android:alpha="0.6"
                            android:layout_toLeftOf="@+id/img_home_detail_product"
                            android:layout_marginRight="10dp">
                        </ImageView>
                        <ImageView
                            app:tint="@android:color/white"
                            android:id="@+id/img_back_detail_product"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            android:background="@drawable/bg_oval"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:alpha="0.6"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E6E6E6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6E6E6"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/txt_name_detail_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textSize="13sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textAllCaps="true"/>
                    <LinearLayout
                        android:id="@+id/ln_rating_detail_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_name_detail_product"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <RatingBar
                            android:id="@+id/rating_detail_product"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:rating="4"
                            android:numStars="5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="#FF9800"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:layout_gravity="center_vertical"
                            android:transformPivotX="0dp"
                            android:secondaryProgressTint="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/txt_number_rating_detail_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(17 đánh giá)"
                            android:textSize="15sp"
                            android:textColor="#323232"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ln_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ln_rating_detail_product"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_price_detail_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.000.000 đ"
                            android:textSize="25sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_price_original_detail_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.200.000 đ"
                            android:textSize="15sp"
                            android:textColor="#323232"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp" />
                        <TextView
                            android:id="@+id/txt_promotion_detail_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-5%"
                            android:textSize="15sp"
                            android:textColor="#323232"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_below="@id/ln_price"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_detail_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông Tin Chi Tiết"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:weightSum="8"
                            android:background="#EDEDED">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Danh mục"
                                android:layout_weight="3"/>
                            <TextView
                                android:id="@+id/txt_category_detail_product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Xiaomi"
                                android:layout_weight="5"
                                android:textColor="#002CAE"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:weightSum="8">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Bảo hành"
                                android:layout_weight="3"/>
                            <TextView
                                android:id="@+id/txt_warranty_detail_product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="1 năm"
                                android:layout_weight="5"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:weightSum="8"
                            android:background="#EDEDED">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Phụ kiên"
                                android:layout_weight="3"/>
                            <TextView
                                android:id="@+id/txt_accessories_detail_product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Tai nghe bluetooth, sạc dự phòng Xiaomi"
                                android:layout_weight="5"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:weightSum="8">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Điều kiện"
                                android:layout_weight="3"/>
                            <TextView
                                android:id="@+id/txt_conditional_detail_product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Tốt"
                                android:layout_weight="5"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:weightSum="8"
                            android:background="#EDEDED">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Mô tả"
                                android:layout_weight="3"/>
                            <TextView
                                android:id="@+id/txt_description_detail_product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Hàng tốt"
                                android:layout_weight="5"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá của khách hàng"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="8"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_rating_detail_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="0.0"/>
                            <RatingBar
                                android:id="@+id/rating_detail_product2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_name_home_product"
                                style="?android:attr/ratingBarStyleSmall"
                                android:numStars="5"
                                android:rating="4"
                                android:stepSize="1"/>
                            <TextView
                                android:id="@+id/txt_number_rating_detail_product2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17 đánh giá"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_name_home_product"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:stepSize="1"/>
                                <ProgressBar
                                    android:id="@+id/rating_5_star"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="50" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/rating_4_star"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_name_home_product"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5"
                                    android:rating="4"
                                    android:stepSize="1"/>
                                <ProgressBar
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="40"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/rating_3_star"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_name_home_product"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:stepSize="1"/>
                                <ProgressBar
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="30"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/rating_2_star"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_name_home_product"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5"
                                    android:rating="2"
                                    android:stepSize="1"/>
                                <ProgressBar
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="20"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/rating_1_star"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_name_home_product"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5"
                                    android:rating="1"
                                    android:stepSize="1"/>
                                <ProgressBar
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="10"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận xét của khách hàng"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_comment_detail_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E6E5E5"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:src="@drawable/ic_baseline_message_24"
            app:tint="#004ABA"
            android:background="@drawable/bg_chat_btn"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Thêm vào giỏ hàng"
            android:background="@drawable/bg_buy_button"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_margin="5dp"/>
    </LinearLayout>
</RelativeLayout>