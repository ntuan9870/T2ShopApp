<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txt_id_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1001"/>
        <TextView
            android:id="@+id/txt_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2022"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txt_name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng vào ngày 12/12/2022.."
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/txt_amount_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.000.000 đ"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/img_ready"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_centerVertical="true"
            app:tint="#26B100"/>
        <ImageView
            android:id="@+id/img_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_flash_off_24"
            android:layout_toRightOf="@+id/img_ready"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:tint="#D59F00"/>
        <ImageView
            android:id="@+id/img_form"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_store_24"
            android:layout_toRightOf="@+id/img_status"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:tint="#001EC3"/>
        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_use_voucher"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>